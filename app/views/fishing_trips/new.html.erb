<div class="container mt-5">
    <h1>新規募集作成</h1>
    <%= form_with(model: @fishing_trip, local: true) do |form| %>
        <% if @fishing_trip.errors.any? %>
            <div id="error_explanation">
                <div id="error_explanation" class="alert alert-danger">
                    <h2><%= pluralize(@fishing_trip.errors.count, "error") %></h2>
                    
                    <ul>
                        <% @fishing_trip.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        <% end %>
        
        
        <div class="form-group">
            <%= form.label :title, 'タイトル' %>
            <%= form.text_field :title, class: 'form-control' %>
        </div>
        
        <div class="form-group">
            <%= form.label :description, '詳細' %>
            <%= form.text_area :description, class: 'form-control' %>
        </div>
        
          <!-- 都道府県のドロップダウンメニュー -->
        <div class="form-group">
            <%= form.label :location, '開催場所' %>
            <%= form.select :location, [
              '北海道', '青森県', '岩手県', '宮城県', '秋田県', 
              '山形県', '福島県', '茨城県', '栃木県', '群馬県', 
              '埼玉県', '千葉県', '東京都', '神奈川県', '新潟県', 
              '富山県', '石川県', '福井県', '山梨県', '長野県', 
              '岐阜県', '静岡県', '愛知県', '三重県', '滋賀県', 
              '京都府', '大阪府', '兵庫県', '奈良県', '和歌山県', 
              '鳥取県', '島根県', '岡山県', '広島県', '山口県', 
              '徳島県', '香川県', '愛媛県', '高知県', '福岡県', 
              '佐賀県', '長崎県', '熊本県', '大分県', '宮崎県', 
              '鹿児島県', '沖縄県'
            ], {}, {class: 'form-control'} %>
        </div>
        
        <div class="form-group">
            <%= form.label :start_date, '開催日' %>
            <%= form.date_select :start_date, {}, {class: 'form-control'} %>
        </div>
        
        <!-- 参加上限人数のフィールド追加 -->
        <div class="form-group">
            <%= form.label :participant_limit, '参加人数の設定' %>
            <%= form.number_field :participant_limit, in:1..100, class: 'form-control' %>
        </div>
        
        
        <div class="d-flex mt-3 justify-content-end">
            <div class="actions">
                <%= form.submit '新規募集を作成する', class: 'btn btn-primary' %>
            </div>
            <div class="actions">
                <%= link_to 'キャンセル', fishing_trips_path , class: 'btn btn-secondary ml-2'%>
            </div>
        </div>
    <% end %>
</div>