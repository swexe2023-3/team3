<%= form_with(model: @fishing_trip, local: true) do |form| %>
    <% if @fishing_trip.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@fishing_trip.errors.count, "error") %></h2>
            
            <ul>
                <% @fishing_trip.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    
    <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    
    <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>
    
    <div class="field">
        <%= form.label :location %
        <%= form.text_field :location %>
    </div>
    
    <div class="field">
        <%= form.label :start_date %>
        <%= form.date_select :start_date %>
    </div>
    
    <div class="actions">
        <%= form.submit %>
    </div>
<% end %>